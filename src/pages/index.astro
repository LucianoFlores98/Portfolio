---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SectionContainer from '../components/SectionContainer.astro';
import LinkedIn from '../components/icons/LinkedIn.astro';
import Github from '../components/icons/Github.astro';
import SocialButton from '../components/SocialButton.astro';
import Mail from '../components/icons/Mail.astro';
import Timeline from '../components/Timeline.astro';
import Briefcase from '../components/icons/Briefcase.astro';
import Code from '../components/icons/Code.astro';
import CardProjects from '../components/CardProjects.astro';
import AboutMe from '../components/AboutMe.astro';
import User from '../components/icons/User.astro';
import Contact from '../components/Contact.astro';

---

<Layout title="Portfolio de Luciano Flores - Desarrollador y Programador fullstack con 2 años de experiencia"
	description="Desarrollador fullstack"
>
	<main class="px-4">

		<SectionContainer class="py-44 pb-32">
			<img 
			class="rounded-full size-20 mb-4 shadow-lg shadow-black ring-2 ring-emerald-600 object-cover" 
			src="/img/profile/profilePic.webp" 
			alt="Perfil Luciano"
			/>

			<h1 class="text-white text-3xl md:4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">Hola! Soy Luciano 		
				<a
				href="https://www.linkedin.com/in/luciano-flores/"
				target="_blank"
				rel="noopener" 
				class="flex justify-center items-center">
					<Badge>Open to work</Badge>
				</a>
			</h1>
			<h2 class="text-xl lg:text-2xl  text-wrap max-w-[700px]">
				<span>≈2 años de experiencia.</span><span class=" text-green-300 "> Desarrollador Fullstack y Analista Programador.</span> 
				<span class="font-semibold text-yellow-100"> De Córdoba, Argentina.</span>
				<span></span>
			</h2>

			<nav class="flex gap-4 mt-8 flex-wrap">

				<SocialButton action="https://www.linkedin.com/in/luciano-flores/">
					<LinkedIn class="size-6"/>
					LinkedIn
				</SocialButton>

				<SocialButton action="https://github.com/LucianoFlores98">
					<Github class="size-6"/>
					Github
				</SocialButton>

				<SocialButton action="mailto:lucianof603@gmail.com">
					<Mail class="size-6"/>
					lucianof603@gmail.com
				</SocialButton>
			</nav>
		</SectionContainer>
		<SectionContainer id="experiencia">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Briefcase class="size-6" />
				Experiencia Laboral
			</h2>
			<Timeline />
		</SectionContainer>

		<SectionContainer id="proyectos" class="w-screen">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Code class="size-6" />
				Proyectos
			</h2>
			<CardProjects />
		</SectionContainer>

		<SectionContainer id="sobre-mi">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<User class="size-6" />
				Sobre Mí
			</h2>
			<AboutMe/>
		</SectionContainer>

		<SectionContainer id="contacto">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Mail class="size-6" />
				Hablemos!
			</h2>
			<Contact/>
		</SectionContainer>

		<section>
			<ul class="List">
				<li>Probadno</li>
			</ul>
		</section>
	</main>
</Layout>
